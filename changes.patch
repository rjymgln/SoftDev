+import React, { useState, useEffect } from 'react';
+import Login from './components/Login';
+import SignUp from './components/SignUp';
+import ForgotPassword from './components/ForgotPassword';
+import WebsiteCafe from './WebsiteCafe'; // Import your WebsiteCafe component
+
+function AuthPage() {
+  const [isLoggedIn, setIsLoggedIn] = useState(false);
+  const [loading, setLoading] = useState(true); // Add a loading state
+  const path = window.location.pathname;
+
+  useEffect(() => {
+    const storedLoginStatus = localStorage.getItem('isLoggedIn');
+    console.log('storedLoginStatus:', storedLoginStatus); // Add this line
+    if (storedLoginStatus === 'true') {
+      setIsLoggedIn(true);
+    }
+    setLoading(false); // Set loading to false after checking storage
+  }, []);
+
+  const handleLoginSuccess = () => {
+    setIsLoggedIn(true);
+    localStorage.setItem('isLoggedIn', 'true');
+    window.history.pushState({}, '', '/cafe');
+  };
+
+  const handleLogout = () => {
+    setIsLoggedIn(false);
+    localStorage.removeItem('isLoggedIn');
+    window.history.pushState({}, '', '/'); // Go back to login page
+  };
+
+  // Render nothing while checking login status
+  if (loading) {
+    return null; // Or a loading spinner
+  }
+
+  let content;
+  if (isLoggedIn) {
+    content = <WebsiteCafe onLogout={handleLogout} />;
+  } else if (path === '/') {
+    content = <Login onLoginSuccess={handleLoginSuccess} />;
+  } else if (path === '/signup') {
+    content = <SignUp />;
+  } else if (path === '/forgotpassword') {
+    content = <ForgotPassword />;
+  } else {
+    content = <div>Page Not Found</div>;
+  }
+
+  return (
+    <>
+      {content}
+    </>
+  );
+}
+
+export default AuthPage;
